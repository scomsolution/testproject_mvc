@model TEST_MVC_2.Models.Student


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row">
    @using (Html.BeginForm("IndexPost", "SelfTest", FormMethod.Post, new { id = "form1" }))
    {
        <div class="col-lg-12">
            @Html.TextBoxFor(m=> m.StudentID, new { @class = "form-control" })
        </div>

        <div class="col-lg-12">
            @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
        </div>

        <div class="col-lg-12">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })

            @Html.DropDownListFor(model => model.SubjectList, Model.SubjectList)

        </div>

        <div class="col-lg-12">
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    }
</div>
